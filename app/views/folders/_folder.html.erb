<div class="draggable" id="<%= "containerFolder_#{ folder.id }" %>">
  <div class="folderFolder " id="<%= "folder_#{ folder.id }" %>">
    <div class="computerFolders navBasic">
      <%= link_to folder_path(folder), class: 'projectListItem', id: 'folderFolder', remote: true do %>
        <span class="articleIcon" data-title="Папка">
          <%= image_tag folder.icon %>
          <div><%#= folder.name %>
            <%= I18n.locale == :ru ? folder.name : folder.name_en %>
          </div>
          <%#= I18n.locale == "ru" ? folder.name : folder.name_en %>
        </span>
      <% end %>
    </div>
  </div>
</div>
