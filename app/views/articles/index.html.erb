<p id="notice"><%= notice %></p>

<link rel="stylesheet" href="../../assets/stylesheets/articles.scss">
<link rel="stylesheet" href="../../assets/stylesheets/menubar.scss">
<link rel="stylesheet" href="../../assets/stylesheets/application.scss">

<div id="Desktop">
  <span class="icon draggable" data-title="Справка">
    <%= image_tag 'about.png' %>
  </span>
  <span class="icon draggable" data-title="Мой компьютер">
    <%= image_tag 'computer.png' %>
  </span>
	<span id="folderfolder" class="icon draggable" data-title="Папка">
    <%= image_tag 'folder.png' %>
  </span>
	<span class="icon draggable" data-title="Корзина">
    <%= image_tag 'trash.png' %>
  </span>
</div>

<div class="foldercontent draggable">
  <div id="close-btn"></div>
  <div id="min-btn"></div>
  <div id="full-btn"></div>
  <div class="infoldercontent">
    <div class="article-icon"></div>
  </div>
</div>

<section class="article_main">

  <div class="massive_article">
    <% @articles.each do |article| %>
      <%= render 'article', article: article %>
    <% end %>
  </div>

  <!-- <div class="button">
    <%= link_to 'New Article', new_article_path %>
  </div> -->

</section>
